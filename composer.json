{
  "name": "diggndeeper/wp-dapp",
  "description": "WordPress plugin to publish content to the Hive blockchain via Hive Keychain.",
  "type": "wordpress-plugin",
  "license": "MIT",
  "require": {},
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "squizlabs/php_codesniffer": "^3.9",
    "wp-coding-standards/wpcs": "^3.1"
  },
  "scripts": {
    "phpcs": "vendor/bin/phpcs --standard=phpcs.xml.dist",
    "phpcbf": "vendor/bin/phpcbf --standard=phpcs.xml.dist",
    "test": "vendor/bin/phpunit --configuration phpunit.xml.dist"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
